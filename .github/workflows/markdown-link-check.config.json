{
  "alive-status-codes": [200, 206, 429],
  "ignorePatterns": [
    {
      "pattern": "^http://localhost"
    },
    {
      "pattern": "^https://example.com"
    },
    {
      "pattern": "^#"
    },
    {
      "pattern": "^https://www\.gartner\.com/en/articles"
    },
    {
      "pattern": "^https://www\.mckinsey\.com/capabilities"
    },
    {
      "pattern": "^https://mlops\.community$"
    }
  ],
  "replacementPatterns": [],
  "httpHeaders": [
    {
      "urls": ["https://github.com"],
      "headers": {
        "Accept": "text/html"
      }
    },
    {
      "urls": ["https://www.gartner.com", "https://www.mckinsey.com"],
      "headers": {
        "User-Agent": "Mozilla/5.0 (compatible; LinkChecker/1.0)",
        "Accept": "text/html"
      }
    }
  ],
  "timeout": "20s",
  "retryOn429": true,
  "retryCount": 3,
  "fallbackRetryDelay": "30s",
  "aliveStatusCodes": [200, 206, 301, 302, 307, 308, 403]
}